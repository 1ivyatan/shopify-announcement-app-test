{% assign meta = app.metafields.libautech_leons %}

{% assign s = shop.permanent_domain %}

{% capture should_render %}
{% render 'should-render', meta: meta, shop: s %}
{% endcapture %}
{% assign should_render = should_render | strip_html | strip %}

{% render 'logUtils' %}
{% render 'prepareScript' %}

{% assign ann = meta.announcementBar %}

{% if ann.value.enabled == 'true' or ann.value.enabled == true %}
  
<div id="TSUFFIX-embed-target">
  <div 
    className="TSUFFIX-tw-scope TSUFFIX-announcement-bar" 
    style="width: 100%;background-color: {{ ann.value.bgColor }} ;color: {{ ann.value.fgColor }};padding: 0.5em 1em;font-size: {{ ann.value.fontSize }}pt;line-height: 1em;display: flex;align-items: center;justify-content: center;    ">
    {{ ann.value.text }}
  </div>  
</div>

{% endif %}


{% if should_render == 'true' or should_render == true %}

{% render 'refreshCarts' %}
{% endif %}

{% schema %}
{
"name": "Announcement bar",
"target": "head",
"stylesheet": "index.css",
"settings": [
]
}
{% endschema %}